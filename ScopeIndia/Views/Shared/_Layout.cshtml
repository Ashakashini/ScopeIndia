<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ScopeIndia</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ScopeIndia.styles.css" asp-append-version="true" />
    <script src="https://code.jquery.com/jquery-2.2.4.min.js" integrity="sha256-BbhdlvQf/xTY9gja0Dq3HiwQF8LaCRTXxZKRutelT44="crossorigin="anonymous"></script>
</head>
<body >

    @{
        var userEmail = Context.Session.GetString("UserEmail") ?? Context.Request.Cookies["UserEmail"];
    }



        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white box-shadow p-0 is-sticky">
        <div class="container-fluid" style="height:75px;background-color:#23245f;">
               <div class="position-absolute start-50 translate-middle-x">
                    <img class="img-fluid" style="width: 50px; height: 40px;" src="~/scope-india-logo-bird.png" />
                </div>
                
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1 justify-content-end ">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="WebHome" asp-action="Home">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="WebHome" asp-action="Aboutus">About us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="WebHome" asp-action="Contact">Contact</a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="WebHome" asp-action="Student">Registration</a>
                        </li>
                       
                        @if (!string.IsNullOrEmpty(userEmail)){
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="WebHome" asp-action="Dashboard">DashBoard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="WebHome" asp-action="Logout">LogOut</a>
                        </li>

                    }
                    else
                    {
                       

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="WebHome" asp-action="Login">Login</a>
                        </li>
                    }
                </ul>
                </div>
            </div>
        </nav>

    <div class="container-fluid p-0">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - ScopeIndia - <a asp-area="" asp-controller="WebHome" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
