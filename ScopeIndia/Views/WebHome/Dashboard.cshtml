@model IEnumerable<ScopeIndia.Models.CourseModel>

 @{
    ViewBag.Title = "Dashboard - Course Details";
}
<div>
<div>
    @{
        var imgPath = "/uploads/" + ViewBag.Avathar;
    }
    <img class="rounded-circle" style="height:100px; width:100px;" src="@imgPath" alt="Profile Image" />
    
</div>
<div>
    <h6>@ViewBag.Name</h6>
</div>
</div>
<div style="padding-left:70px;">
<table class="table table-bordered " style="height:100%;width:95%; border:2px solid black;">
    <thead>
        <tr>
            <th>ID</th>
            <th>Course Name</th>
            <th>Duration</th>
            <th>Fees</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var course in Model)
        {
            <tr>
                    <td >@course.CourseId</td>
                    <td>@course.CourseName</td>
                <td >@course.Duration</td>
                <td>@course.Fee</td>
                <td>
                        <form asp-controller="WebHome" asp-action="JoinCourse"  method="get">
                            <input type="hidden" name="courseId" value="@course.CourseId" />
                        <button type="submit" class="btn btn-success btn-outline-dark btn-sm float-end">Join</button>
                    </form>
                </td>
            </tr>

        }
    </tbody>
</table>
</div>

