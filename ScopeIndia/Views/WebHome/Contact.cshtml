                         <input asp-for="FromAddress" class="form-control col-6" id="FromAddress" />
                         <label asp-for="FromAddress" class="form-label col-6">From Address</label>
                         <span asp-validation-for="FromAddress" class="text-danger"></span>
                 </div>
                 <br/> *@
                <div class="form-floating mx-auto ">
                        <input asp-for="ToAddress" class="form-control col-6 rounded-circle" id="ToAddress" />
                        <label asp-for="ToAddress" class="form-label col-6">To Address</label>
                        <span asp-validation-for="ToAddress" class="text-danger"></span>
                </div>
                <br />
                <div class="form-floating mx-auto">
                        <input asp-for="Subject" class="form-control col-6 rounded-circle" id="Subject" />
