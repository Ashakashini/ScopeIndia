<div class="text-center ">
    <div>
        <div class="container bg-dark  h-50 w-50 mt-3" id="form">
        <form asp-controller="WebHome" asp-action="Contact" method="post" >
            <fieldset>
                <legend class="text-white">CONTACT FORM</legend>
