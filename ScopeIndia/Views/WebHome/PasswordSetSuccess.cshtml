@model ScopeIndia.Models.PasswordSuccessModel

@{
    ViewData["Title"] = "Password Set Success";
}

<h2>@ViewData["Title"]</h2>

<div class="alert alert-success" role="alert">
    <h4 class="alert-heading">Success, @Model.UserName!</h4>
    <p>Your password for <strong>@Model.Email</strong> has been successfully updated.</p>
    <hr>
    <p class="mb-0">You can now <a href="@Url.Action("Login")">login</a> with your new password.</p>
</div>

<!-- Optional: Auto redirect -->
<meta http-equiv="refresh" content="5; url=@Url.Action("Login")" />